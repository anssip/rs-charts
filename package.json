{
  "name": "spotcanvas-charts",
  "version": "0.1.0",
  "type": "module",
  "private": false,
  "description": "Web components for SpotCanvas charting",
  "keywords": [
    "web-components",
    "lit",
    "charting",
    "candlestick"
  ],
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/your-repo.git"
  },
  "license": "MIT",
  "author": "Your Name <your.email@example.com>",
  "main": "./dist/lib/index.js",
  "module": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts"
    }
  },
  "files": [
    "dist/lib",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev:client": "bun build ./client/index.ts --outdir ./dist/client --target browser --define 'import.meta.env={\"API_BASE_URL\":\"https://market.spotcanvas.com\"}' --watch",
    "dev:server": "bun build ./server/index.ts --outdir ./dist/server --target bun --watch",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\" \"bun --watch run ./dist/server/index.js\"",
    "predev": "bun run build",
    "build:client": "bun build ./client/index.ts --outdir ./dist/client --target browser --define \"import.meta.env={\\\"API_BASE_URL\\\":\\\"${API_BASE_URL}\\\"}\"",
    "build:server": "bun build ./server/index.ts --outdir ./dist/server --target bun",
    "build:app": "mkdir -p dist/client && bun run build:client && bun run build:server && cp client/*.html client/*.css ./dist/client",
    "start": "bun run ./dist/server/index.js",
    "test": "bun test",
    "build:lib:js": "bun build ./client/lib.ts --outdir ./dist/lib --target browser --format esm --external lit --external lit-element --external lit-html --external xinjs --external @use-gesture/vanilla",
    "build:lib:types": "tsc --project tsconfig.lib.json --emitDeclarationOnly --outDir dist/lib",
    "build:lib": "rm -rf dist/lib && npm run build:lib:js && npm run build:lib:types",
    "build": "npm run build:lib",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/bun": "^1.1.12",
    "bun-types": "latest",
    "concurrently": "^9.0.1",
    "typescript": "latest"
  },
  "peerDependencies": {
    "lit": "^3.2.1",
    "lit-element": "^4.1.1",
    "lit-html": "^3.2.1",
    "xinjs": "^0.7.2",
    "@use-gesture/vanilla": "^10.3.1"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "coinbase-api": "^1.0.2",
    "dotenv": "^16.4.5",
    "firebase": "^11.0.1",
    "jsonwebtoken": "^9.0.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
