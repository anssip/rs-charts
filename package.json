{
  "name": "candlestick-chart",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev:client": "bun build ./src/index.ts --outdir ./dist/client --target browser --watch",
    "dev:server": "bun build ./src/server.ts --outdir ./dist/server --target bun --watch",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\" \"bun --watch run dist/server/server.js\"",
    "build:client": "bun build ./src/index.ts --outdir ./dist/client --target browser",
    "build:server": "bun build ./src/server.ts --outdir ./dist/server --target bun",
    "build": "npm run build:client && npm run build:server",
    "postbuild": "cp src/index.html dist/client/"
  },
  "devDependencies": {
    "@types/bun": "^1.1.12",
    "bun-types": "latest",
    "concurrently": "^9.0.1",
    "typescript": "latest"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "coinbase-api": "^1.0.2",
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2"
  }
}
